<?xml version='1.0' encoding='utf-8'?>
<widget id="com.phonegap.imagetotexttospeech" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>ImageToTextToSpeech</name>
    <description>
         Application that enable you to take picture then extract text from image then convert the text to speech.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <preference name="phonegap-version" value="cli-7.1.0" />
        <preference name="android-minSdkVersion" value="19" />
        <allow-intent href="market:*" />
    </platform>
    <preference name="DisallowOverscroll" value="true" />
    <plugin name="cordova-plugin-mobile-ocr" spec="*" />
    <plugin name="cordova-plugin-camera" spec="*" />
    <plugin name="cordova-plugin-android-permissions" spec="~1.0.0" />
</widget>
